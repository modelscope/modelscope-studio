{
  "name": "modelscope_studio",
  "version": "0.1.5",
  "private": true,
  "description": "ModelScope Gradio Components",
  "repository": "git@github.com:modelscope/modelscope-studio.git",
  "license": "Apache-2.0",
  "scripts": {
    "prepare": "husky || true",
    "dev": "gradio cc dev",
    "dev:compiled": "pnpm -F '@modelscope-studio/compiled' dev",
    "build:compiled": "pnpm -F '@modelscope-studio/compiled' build",
    "build": "rimraf dist && pnpm run build:compiled && gradio cc build --no-generate-docs",
    "build:pure": "rimraf dist && gradio cc build --no-generate-docs",
    "lint": "npm-run-all --parallel lint:* && npm run format",
    "format": "prettier --cache --write '**/*.{js,jsx,tsx,ts,svelte,less,md,yaml,yml,json}' --no-error-on-unmatched-pattern",
    "lint:js": "eslint . --fix  --cache --ext .js,.jsx,.ts,.tsx,.svelte frontend",
    "lint:ts": "tsc",
    "lint:py": "flake8 . && isort . && yapf --in-place --recursive --exclude=node_modules/ .",
    "lint:style": "stylelint --allow-empty-input --cache --fix \"**/*.{less,css}\" ",
    "changeset": "changeset",
    "fix-changelog": "node ./config/changelog/dist/fix-changelog.mjs",
    "ci:create-tag-n-release": "tsx ./scripts/create-tag-n-release.ts",
    "ci:publish": "tsx ./scripts/publish-to-pypi.ts",
    "ci:version": "pnpm -F '@modelscope-studio/changelog' build && changeset version && pnpm run fix-changelog"
  },
  "devDependencies": {
    "@actions/core": "^1.10.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.0",
    "@changesets/cli": "^2.27.1",
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@manypkg/get-packages": "^2.2.1",
    "@modelscope-studio/changelog": "workspace:*",
    "@modelscope-studio/lint-config": "workspace:*",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "node-fetch": "^3.3.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "prettier-plugin-packagejson": "^2.4.14",
    "prettier-plugin-svelte": "^3.2.2",
    "rimraf": "^5.0.5",
    "stylelint": "^16.2.1",
    "svelte": "^4.2.12",
    "tslib": "^2.6.2",
    "tsx": "^4.7.2",
    "typescript": "^5.4.4"
  },
  "main_changeset": true
}
