{
  "name": "modelscope_studio",
  "version": "0.3.1",
  "private": true,
  "description": "ModelScope Gradio Components",
  "repository": "git@github.com:modelscope/modelscope-studio.git",
  "license": "Apache-2.0",
  "scripts": {
    "prepare": "husky || true",
    "dev": "gradio cc dev",
    "dev:compiled": "pnpm -F '@modelscope-studio/compiled' dev",
    "build:compiled": "pnpm -F '@modelscope-studio/compiled' build",
    "build": "rimraf dist && pnpm run build:compiled && pnpm -F '@modelscope-studio/flow' build && gradio cc build --no-generate-docs",
    "build:pure": "rimraf dist && gradio cc build --no-generate-docs",
    "lint": "npm-run-all --parallel lint:* && npm run format",
    "format": "prettier --cache --write '**/*.{js,jsx,tsx,ts,svelte,less,md,yaml,yml,json}' --no-error-on-unmatched-pattern",
    "lint:js": "eslint . --fix  --cache --ext .js,.jsx,.ts,.tsx,.svelte",
    "lint:ts": "tsc",
    "lint:py": "flake8 . && isort . && yapf --in-place --recursive --exclude=node_modules/ .",
    "lint:style": "stylelint --allow-empty-input --cache --fix \"**/*.{less,css}\" ",
    "changeset": "changeset",
    "fix-changelog": "node ./config/changelog/dist/fix-changelog.mjs",
    "version": "changeset version && pnpm -F '@modelscope-studio/changelog' build && pnpm run fix-changelog",
    "ci:create-tag-n-release": "tsx ./scripts/create-tag-n-release.ts",
    "ci:publish": "tsx ./scripts/publish-to-pypi.ts",
    "ci:version": "pnpm -F '@modelscope-studio/changelog' build && pnpm run version"
  },
  "devDependencies": {
    "@actions/core": "^1.10.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.0",
    "@changesets/cli": "^2.27.5",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@manypkg/get-packages": "^2.2.1",
    "@modelscope-studio/changelog": "workspace:*",
    "@modelscope-studio/lint-config": "workspace:*",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "node-fetch": "^3.3.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.2",
    "prettier-plugin-packagejson": "^2.5.0",
    "prettier-plugin-svelte": "^3.2.4",
    "rimraf": "^5.0.7",
    "stylelint": "^16.6.1",
    "svelte": "^4.2.18",
    "tslib": "^2.6.3",
    "tsx": "^4.15.5",
    "typescript": "^5.4.5"
  },
  "main_changeset": true
}
